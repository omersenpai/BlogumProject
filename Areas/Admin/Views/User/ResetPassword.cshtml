@model BlogProject.Areas.Admin.Models.AdminResetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4">Şifre Sıfırla</h1>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Şifre Sıfırlama</h6>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="UserId" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> 
                            Şifre sıfırlama işlemi geri alınamaz. Yeni şifre kullanıcıya bildirilmelidir.
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary" onclick="return confirm('Kullanıcının şifresini sıfırlamak istediğinize emin misiniz?')">
                                <i class="bi bi-key"></i> Şifreyi Sıfırla
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 