@model BlogProject.Entities.Post
@{
    ViewData["Title"] = "Blog Yazısı Sil";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4>Uyarı: Bu işlem geri alınamaz!</h4>
                    <p>Aşağıdaki blog yazısını silmek istediğinizden emin misiniz?</p>
                </div>

                <div class="mb-4">
                    <h3 class="mb-3">@Model.Title</h3>
                    <p><strong>Kategori:</strong> @Model.Category?.Name</p>
                    <p><strong>Yayınlanma Tarihi:</strong> @Model.PublishedOn.ToString("dd.MM.yyyy HH:mm")</p>
                    
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mb-3">
                            <img src="~/img/@Model.Image" alt="@Model.Title" class="img-fluid rounded" style="max-height: 200px;" />
                        </div>
                    }
                    
                    <div class="mb-3">
                        <h5>Açıklama:</h5>
                        <p>@Model.Description</p>
                    </div>
                </div>

                <form asp-controller="Post" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="PostId" />
                    
                    <div class="d-flex mt-3">
                        <button type="submit" class="btn btn-danger me-2">Sil</button>
                        <a href="/post/@Model.Url" class="btn btn-outline-secondary">Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 